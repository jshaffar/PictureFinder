<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_take_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp" />

<EditText
        android:id="@+id/savePhotoEditText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:layout_editor_absoluteX="-169dp">

    </EditText>


    <Button
        android:id="@+id/confirmTextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        tools:layout_editor_absoluteX="293dp"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/inputName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="89dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Picture"
        android:shadowColor="@color/colorPrimary"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/colorPrimary"
        android:text="Select Picture \n from Computer"
        android:textColor="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="228dp"
        tools:layout_editor_absoluteY="238dp" />

    <TextView
        android:id="@+id/textViewTakePictureInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write picture text here. \n
        that will make it searchable"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="27dp" />
    }

</androidx.constraintlayout.widget.ConstraintLayout>


